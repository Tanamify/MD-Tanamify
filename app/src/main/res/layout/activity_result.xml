<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.result.ResultActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/resultImage"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_margin="24dp"
        app:shapeAppearanceOverlay="@style/RoundedCornerImageView"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_gallery_foreground"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Jenis Tanah :"
        android:textColor="@color/green_primary"
        android:fontFamily="@font/rubik_bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultImage" />

    <TextView
        android:id="@+id/tv_resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        android:text="Hasil Analisis"
        android:textColor="@color/black"
        android:fontFamily="@font/rubik"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tv_titleText"
        app:layout_constraintTop_toBottomOf="@+id/resultImage" />

    <TextView
        android:id="@+id/tv_titleTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="24dp"
        android:text="Rata-rata temperatur :"
        android:textColor="@color/green_primary"
        android:fontFamily="@font/rubik_bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_resultText" />

    <TextView
        android:id="@+id/tv_resultTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:text="36째C"
        android:textColor="@color/black"
        android:fontFamily="@font/rubik"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tv_titleTemp"
        app:layout_constraintTop_toBottomOf="@+id/tv_resultText" />

    <TextView
        android:id="@+id/tv_titleHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="24dp"
        android:text="Rata-rata kelembapan :"
        android:textColor="@color/green_primary"
        android:fontFamily="@font/rubik_bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_resultTemp" />

    <TextView
        android:id="@+id/tv_resultHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:text="36째C"
        android:textColor="@color/black"
        android:fontFamily="@font/rubik"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tv_titleHumidity"
        app:layout_constraintTop_toBottomOf="@+id/tv_resultTemp" />

    <TextView
        android:id="@+id/tv_titleRain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="24dp"
        android:text="Rata-rata curah hujan/hari :"
        android:textColor="@color/green_primary"
        android:fontFamily="@font/rubik_bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_resultHumidity" />

    <TextView
        android:id="@+id/tv_resultRain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:text="36째C"
        android:textColor="@color/black"
        android:fontFamily="@font/rubik"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tv_titleRain"
        app:layout_constraintTop_toBottomOf="@+id/tv_resultHumidity" />

    <TextView
        android:id="@+id/tv_titleSun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="24dp"
        android:text="Lama penyinaran matahari :"
        android:textColor="@color/green_primary"
        android:fontFamily="@font/rubik_bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_resultRain" />

    <TextView
        android:id="@+id/tv_resultSun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:text="36째C"
        android:textColor="@color/black"
        android:fontFamily="@font/rubik"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tv_titleSun"
        app:layout_constraintTop_toBottomOf="@+id/tv_resultRain" />

    <TextView
        android:id="@+id/tv_titleRecommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Rekomendasi Tanaman :"
        android:textColor="@color/green_primary"
        android:fontFamily="@font/rubik_bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_resultSun" />

    <TextView
        android:id="@+id/tv_recommendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Padi, Tebu, Jagung"
        android:textColor="@color/black"
        android:fontFamily="@font/rubik"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titleRecommend" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_okay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_outline"
        android:text="Oke, kembali"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:fontFamily="@font/rubik"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>